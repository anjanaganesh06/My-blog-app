<%- include("partials/header") %>

<h1>All Blog Posts</h1>

<ul>
  <% posts.forEach(function(post) { %>
    <li>
      <h2><a href="/posts/<%= post.id %>"><%= post.title %></a></h2>
      <p><%= post.content.substring(0, 100) %>...</p>
    </li>
  <% }); %>
</ul>

<a href="/">🏠 Back to Home</a>

